<%- include(`${__dirname}/views/components/head.ejs`) %>

<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include(`${__dirname}/views/components/navigation.ejs`) %>

  <main>
    <% if (prods.length > 0) { %>
    <div class="grid">
      <% for (let product of prods) { %>
      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title"><%= product.title %></h1>
        </header>
        <div class="card__image">
          <img src="<%= product.imageUrl %>" alt="A Book">
        </div>
        <div class="card__content">
          <h2 class="product__price">$<%= product.price %></h2>
          <p class="product__description"><%= product.description %></p>
        </div>
        <div class="card__actions">
          <% if (authenticated) { %>
          <%- include(`${__dirname}/views/components/add-to-cart.ejs`, {product: product}) %>
          <% } %>
        </div>
      </article>
      <% } %>
    </div>
    <%- include(`${__dirname}/views/components/pagination.ejs`) %>
    <% } else { %>
    <h1>No Products Found</h1>
    <% } %>
  </main>

  <%- include(`${__dirname}/views/components/end.ejs`) %>