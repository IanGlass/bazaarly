<%- include(`${__dirname}/views/components/head.ejs`) %>
</head>

<body>
  <%- include(`${__dirname}/views/components/navigation.ejs`) %>

  <main class="centered">
    <h1><%= product.title %></h1>
    <hr>

    <div class="image">
      <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    </div>

    <h2>$<%= product.price %></h2>
    <p><%= product.description %></p>
    <% if (authenticated) { %>
      <%- include(`${__dirname}/views/components/add-to-cart.ejs`) %>
    <% } %>

  </main>


  <%- include(`${__dirname}/views/components/end.ejs`) %>