<%- include(`${__dirname}/views/components/head.ejs`) %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
  <%- include(`${__dirname}/views/components/navigation.ejs`) %>
  <main>
    <% if (cartProducts.length) { %>
      <ul class="cart__item-list">
        <% cartProducts.forEach(cartProduct => { %>
          <li class="cart__item">
            <h1><%= cartProduct.product.title %></h1>
            <h2>Quantity: <%= cartProduct.quantity %></h2>
            <form action="/cart-delete-item" method="POST">
              <button class="btn" type="submit">Delete</button>
              <input type="hidden" value="<%= cartProduct.product.id %>" name="productId">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>
          </li>
        <% }) %>
      </ul>
      <hr>
      <div class="centered">
        <a class="btn" href="/checkout">Order Now!</a>
      </div>
    <%} else {%>
      <h1>No Products in Cart</h1>
    <% } %>

  </main>

  <%- include(`${__dirname}/views/components/end.ejs`) %>